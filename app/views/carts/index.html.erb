<h1>Orders</h1>

<table class="table" id="id-orders-table" data-page-length='5'>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Total</th>
      <th>Purcahse Date</th>
      <th>Status</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td style="width: 10%;"><%= cart.id %></td>
        <td style="width: 10%;"><%= cart.total %></td>
        <td style="width: 10%;"><%= cart.created_at %></td>
        <td style="width: 10%;"><%= "Paid" %></td>
        <td style="width: 10%;"><%= link_to 'Show', cart, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
$(document).ready( function () {
    //alert('ready');

    $('#id-orders-table').DataTable({
       paging: true,
       searching: true,
       ordering:  true,
       dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
});
</script>