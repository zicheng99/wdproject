<h1>Order Details</h1>

<div class="row">
  <div class="col-md-8">
    <table class="table" id="id-purchasedorders-table">
  <thead>
    <tr>
      <th style="width: 20%;">Image</th>
      <th style="width: 20%;">Product Name</th>
      <th style="width: 20%;">U.Price</th>
      <th style="width: 20%;">Qty</th>
      <th style="width: 20%;">Subtotal</th>
    </tr>
  </thead>
 
  <tbody id="tbody_line_items">
    <%= render 'test' %>
  </tbody>

</table>
  </div> <!-- /col-md-8 -->

<div class="col-md-4">

<div class="card">
  <div class="card-header text-center">
    <h2>Payment</h2>
  </div>
  <div class="card-body">
    <table class="table">

      <tr>
        <td><h5>Shipped To: </h5></td>
        <td><h5>No 03-05, Block 6, Jalan Bertam 16, Taman Daya, 81100, JB, Johor.</h5></td>
      </tr>

      <tr>
        <td><h5>Subtotal (RM)</h5></td>
        <td><h5>650.00</h5></td>
      </tr>

      <tr>
        <td><h5>Shipping Fee (RM)</h5></td>
        <td><h5>10.00</h5></td>
      </tr>
      
      <tr>
        <td><h3>Grand Total (RM)</h3></td>
        <td><h4>660.00</h4></td>
      </tr>  

      <tr>
        <td><h5>Promo Code</h5></td>
        <td><h5>promo20</h5></td>
      </tr> 

      <tr style="visibility: visible;" id="row_discount">
        <td><h5>Discount (RM)</h5></td>
        <td><h5>-20.00</h5></td>
      </tr>

      <tr style="visibility: visible;" id="row_discounted">
        <td><h3>Discounted Price (RM)</h3></td>
        <td><h3>640.00</h3></td>
      </tr>

    </table>
</div>


</div> <!-- /col-md-4 -->
</div> <!-- /row -->

<script>
$(document).ready( function () {
    //alert('ready');

var d = new Date();
var strDate = d.getFullYear() + "/" + (d.getMonth()+1) + "/" + d.getDate();

    $('#id-purchasedorders-table').DataTable({
       paging: true,
       searching: true,
       ordering:  true,
       dom: 'Bfrtip',
        buttons: [
            {
                extend: 'excelHtml5',
                title: 'Order Details-' + strDate,
                exportOptions: {
                    columns: [ 1, 2, 3, 4 ]
                }
            }, 'csv', 'pdf', 'print'
        ]
    });
});
</script>