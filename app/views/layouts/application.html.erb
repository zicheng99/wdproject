<!DOCTYPE html>
<html>
  <head>
    <title>T1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">

    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

     <script src="//cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>   

      <script src="//cdn.datatables.net/buttons/1.6.5/js/buttons.flash.min.js"></script>   

      <script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

      <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>

      <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

      <script src="//cdn.datatables.net/buttons/1.6.5/js/buttons.html5.min.js"></script>

       <script src="//cdn.datatables.net/buttons/1.6.5/js/buttons.print.min.js"></script> 

  </head>

  <body>

    <%= render 'shared/topnav' %>
    <div class="container-fluid" style="margin-top: 80px;">

      <div class="row">
        <div class="col-md-2">
          <%= render 'shared/sidenav' %>
        </div> <!-- /col-md-2 --> 

        <div class="col-md-10">
          <% flash.each do |name, msg| %>
            <div class="alert alert-info">
              <%= msg %>
            </div>
          <% end %>
          
          <%= yield %>
             
      </div> <!-- /col-md-10 -->

      </div> <!-- /row -->
    </div> <!-- /container-fluid -->
    
    <div style="display: none; position: absolute; bottom: 200px; background-color: lightgrey;">
      <h3> <%= link_to "to cart", line_items_path, style: "color:blue;" %> </h3>

      <h3>current_shoper:</h3>
      <% if current_shopper %>
         <%= current_shopper.email %>
      <% end %>

      <h3>Action Count(s): <%= session[:test] %></h3>
      <h3>T3: <%= @t3 %></h3>
      <h3 id="id_current_cart_id">@current_cart.id: <%= @current_cart.id %></h3>
      <p>@current_cart.status: <%= @current_cart.status %></p>
    </div>
 
 <div class="bg-light" style="height: 60px; bottom: 0px; width: 100%; position: absolute; display: none;>
  <h5 style="text-align: center; padding: 15px;">&#169; ystechworld</h5>
 </div>

  </body>
</html>
