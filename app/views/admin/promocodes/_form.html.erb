<%= form_with(model: admin_promocode) do |form| %>

<div class="card">
  <div class="card-header  text-center">
    New Promo Code
  </div>
  <div class="card-body">
 <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start %>
    <%= form.date_field :start, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end %>
    <%= form.date_field :end, class: "form-control" %>
  </div>

  <div class="form-group">
     <label for="exampleFormControlSelect1">Discount Type</label>
    <%= form.select :discount_type, ['Discount in %', 'Discount in Subtotal'], id: "exampleFormControlSelect1", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :value %>
    <%= form.text_field :value, class: "form-control" %>
  </div>

  <div class="form-group">
    <p style="text-align: center;">
          <%= form.submit class: "btn btn-primary" %>
    </p>
  </div>
<% end %>

  </div>

</div>

 